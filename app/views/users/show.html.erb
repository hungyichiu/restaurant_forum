<div class="container">
  <div class="row">

    <div class= "col-md-10 col-md-offset-1">
      <div class="col-md-3 col-sm-4">
        <div class="text-center">
          <%= image_tag @user.avatar, class: "img-responsive img-rounded" %>
        </div>
      </div>
      <div class="col-md-9 col-sm-8">
        <h2><%= @user.name %></h2>
        <p><%= @user.email %></p>
        <div><%= @user.intro %></div>
        <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-primary" %>

      </div>


      <div class="clearfix"></div>

      <div class="divider"></div>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Panel title</h3>
        </div>

        <div class="panel-body">
          <% @commented_restaurants.each do |restaurant| %>
            <!-- 按需求讀取資料 -->
            <div class="my-restaurant">
            <div>
            <%= image_tag "0#{rand(20).to_s.rjust(2,'0')}.jpg", class: "img-responsive img-rounded" %></div>
            <h5>
            <%= link_to restaurant.name, restaurant_path(@commented_restaurants) %>
            </h5>
            </div>
          <% end %>

        </div>

      </div>
      
    </div>

  </div>
</div>


