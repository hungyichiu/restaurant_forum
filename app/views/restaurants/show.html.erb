

<div class="container">
  <div class="row">

    <div class="col-md-12">
      <h1><%= @restaurant.name %></h1>
      [ <%= @restaurant.category.name %> ]
    </div>

    <div class="col-md-4">
      <%= image_tag "0#{rand(20).to_s.rjust(2,'0')}.jpg", class: "img-responsive center-block" %>
  
    <br>

      <div class="well">
        <ul class="list-unstyled">
          <li><strong>Opening Hours:</strong><%= @restaurant.opening_hours %></li>
          <li><strong>Tel: </strong><%= @restaurant.tel %></li>
          <li><strong>Address: </strong><%= @restaurant.address %></li>
        </ul>
      </div>
      
    </div>
    
    <div class="col-md-8">
      <%= simple_format @restaurant.description %>
    </div>



    <div class="clearfix"></div>

    <hr>

    

  </div>
</div>

<div class="container">
  <div class="row">

    <!-- 顯示與餐廳相關的評論 -->
    <% @restaurant.comments.each do |comment|%>
    <div>
      <h4><%= comment.user.email.split("@").first %></h4>
      <p><%= simple_format comment.content %></p>
      <p class="text-muted">
        <em><%= time_ago_in_words(comment.created_at) %> ago </em>
      </p>
    </div>
    <% end %>
    
    <!-- 新增評論的表單輸入框 -->
    <%= form_for [@restaurant, @comment] do |f|%>
      <div class= "form-group" >
       <%= f.text_area :content, palceholder: "留個言吧～", class: "form-controller" %>
      </div>
      <div class= "form-group" >
       <%= f.submit %>
       <%= f.button "Cancel", type: :reset, class: "btn btn default"%>
      </div>
    <% end %>
  </div>
</div>
